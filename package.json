{
  "name": "zod-decorator",
  "description": "Decorators for Zod, use the full power of the validator easily in class",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Alex Borges",
  "private": false,
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "url": "https://github.com/aalexborges/zod-decorator#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aalexborges/zod-decorator"
  },
  "bugs": {
    "url": "https://github.com/aalexborges/zod-decorator/issues"
  },
  "scripts": {
    "build": "rimraf -rf dist && tsc -p tsconfig.build.json",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch",
    "format": "prettier --write \"{lib,test}/**/*.ts\"",
    "lint": "eslint '{lib,test}/**/*.ts' --fix",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prerelease": "npm run build",
    "release": "release-it",
    "prepare": "husky"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.13 || ^0.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-angular": "^19.3.0",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.6",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "release-it": "^17.5.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.2",
    "typescript": "^5.5.3",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.1.13 || ^0.2.0",
    "zod": "^3.0.0"
  },
  "keywords": [
    "typescript",
    "zod",
    "schema",
    "class",
    "validation",
    "validator"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --ignore-unknown --write"
    ]
  }
}
